-- Dominator.lua

local Dominator = {}

-- Funções baseadas na Fluxus UI Lib
function Dominator.createFluxusWindow(title, size, position)
    local window = Fluxus.UI.Window(title, size, position)
    return window
end

function Dominator.addFluxusButton(window, buttonText, callback)
    local button = window:Button(buttonText, callback)
    return button
end

function Dominator.addFluxusSlider(window, sliderText, min, max, callback)
    local slider = window:Slider(sliderText, min, max, callback)
    return slider
end

-- Funções baseadas na Orion Lib
function Dominator.createOrionWindow(title, size, position)
    local window = Orion.UI.Window(title, size, position)
    return window
end

function Dominator.addOrionButton(window, buttonText, callback)
    local button = window:Button(buttonText, callback)
    return button
end

function Dominator.addOrionSlider(window, sliderText, min, max, callback)
    local slider = window:Slider(sliderText, min, max, callback)
    return slider
end

-- Funções personalizadas
function Dominator.doSomethingCool()
    print("Fazendo algo incrível com a Dominator!")
end

function Dominator.advancedFeature()
    print("Funcionalidade avançada da Dominator!")
end

return Dominator
